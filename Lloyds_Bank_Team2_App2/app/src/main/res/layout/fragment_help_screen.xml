<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.team.two.lloyds_app.screens.fragments.HelpScreenFragment"
    android:background="#ffffffff">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How to use app"
        android:id="@+id/helpTitle"
        android:layout_marginLeft="41dp"
        android:layout_marginStart="41dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&quot;Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum.&quot;"
        android:id="@+id/helpBox"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/helpTitle"
        android:layout_alignLeft="@+id/helpTitle"
        android:layout_alignStart="@+id/helpTitle"
        android:layout_marginRight="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About the app"
        android:id="@+id/aboutTitle"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/helpBox"
        android:layout_alignStart="@+id/helpBox"
        android:textStyle="bold"
        android:textColor="@color/lloyds_green"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App was developed by Team 2 @ Newcastle University 2015"
        android:id="@+id/aboutBox"
        android:layout_below="@+id/aboutTitle"
        android:layout_alignLeft="@+id/aboutTitle"
        android:layout_alignStart="@+id/aboutTitle"
        android:layout_marginTop="15dp"
        android:layout_marginRight="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Development Credits: "
        android:id="@+id/textView2"
        android:layout_below="@+id/aboutBox"
        android:layout_alignLeft="@+id/aboutBox"
        android:layout_alignStart="@+id/aboutBox"
        android:layout_marginTop="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-Matthew Selby \n -Daniel Baranowski \n -Jack Hookham \n -Deniz Kucukterzi \n -Oliver McPheely \n -Daniel Smith \n -Mikey Edwards \n -Josh Greenwood "
        android:id="@+id/credits"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="15dp"
        android:lineSpacingExtra="2dp"/>

</RelativeLayout>
