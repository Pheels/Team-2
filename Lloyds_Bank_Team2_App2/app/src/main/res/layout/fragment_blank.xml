<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/blank_fragment"
    android:background="@color/lloyds_green"
    tools:context="com.team.two.lloyds_app.screens.fragments.MainScreenFragment">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.team.two.lloyds_app.screens.MainScreen">

        <TextView android:id="@+id/logo_label"
            android:text="Lloyds Bank"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textColor="@color/lloyds_green"
            android:textSize="30dp"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/horse"
            android:background="@drawable/horse"
            android:layout_above="@+id/border"
            android:layout_alignParentRight="true" />

        <View
            android:layout_below="@+id/logo_label"
            android:background="@color/lloyds_green"
            android:layout_width = "fill_parent"
            android:layout_height="3dip"
            android:layout_centerVertical ="true"
            android:id="@+id/border" />



        <TextView android:id="@+id/account_name"
            android:textColor="@color/lloyds_green"
            android:text="@string/hello_world"
            android:layout_below="@+id/logo_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="10dp" />

        <TextView android:id="@+id/account_number" android:text="@string/hello_world" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/account_name"
            android:layout_marginTop="5dp"/>

        <TextView android:id="@+id/account_sort_code" android:text="@string/hello_world" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/account_number"
            android:layout_centerHorizontal="true"
            />

        <TextView android:id="@+id/account_type" android:text="@string/hello_world" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/account_sort_code"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView android:id="@+id/account_balance_label"
            android:text="Balance:"
            android:textColor="@color/lloyds_green"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/account_balance"/>

        <TextView android:id="@+id/account_balance"
            android:text="@string/hello_world"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lloyds_green"
            android:textSize="20dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/account_sort_code"
            android:layout_centerHorizontal="true" />

        <TextView android:id="@+id/account_available_label"
            android:text="Avaliable:"
            android:textColor="@color/lloyds_green"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/account_available"/>


        <TextView android:id="@+id/account_available" android:text="@string/hello_world" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/account_balance"
            android:layout_marginTop="15dp"
            android:textColor="@color/lloyds_green"
            android:textSize="25dp"
            android:layout_alignLeft="@+id/account_balance"/>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true">

            <Button
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:layout_marginRight="30dp"
                android:text="Statement"
                android:id="@+id/statement_button"
                android:onClick="openStatement"
                android:layout_row="12"
                android:layout_column="0" />

            <Button
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:text="Transfers"
                android:id="@+id/transfers_button"
                android:onClick="openTransfers"
                android:layout_row="12"
                android:layout_column="1" />

            <Button
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:text="Achievements"
                android:id="@+id/achievements_button"
                android:onClick="openAchievements"
                android:layout_row="14"
                android:layout_column="0" />

            <Button
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:text="Branch Finder"
                android:id="@+id/finder_button"
                android:onClick="openFinder"
                android:layout_row="14"
                android:layout_column="1" />

            <Button
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:text="Money Planner"
                android:id="@+id/planner_button"
                android:onClick="openPlanner"
                android:layout_row="16"
                android:layout_column="0" />

            <Button
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:text="Offers and Deals"
                android:id="@+id/deals_button"
                android:onClick="openDeals"
                android:layout_row="16"
                android:layout_column="1" />
        </GridLayout>




    </RelativeLayout>

</FrameLayout>
