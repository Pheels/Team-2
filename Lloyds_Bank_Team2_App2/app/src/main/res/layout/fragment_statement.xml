<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.team.two.lloyds_app.screens.Statement"
    android:background="#FFFFFF">

    <Spinner android:id="@+id/account_name"
        android:textColor="@color/lloyds_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginTop="10dp" />

    <TextView android:id="@+id/account_number" android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/account_name"
        android:layout_marginTop="5dp"/>

    <TextView android:id="@+id/account_sort_code" android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/account_number"
        android:layout_centerHorizontal="true"
        />

    <TextView android:id="@+id/account_type" android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/account_sort_code"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView android:id="@+id/account_balance_label"
        android:text="Balance:"
        android:textColor="@color/lloyds_green"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/account_balance"/>

    <TextView android:id="@+id/account_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/lloyds_green"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/account_sort_code"
        android:layout_centerHorizontal="true" />

    <TextView android:id="@+id/account_available_label"
        android:text="Avaliable:"
        android:textColor="@color/lloyds_green"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/account_available"/>


    <TextView android:id="@+id/account_available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/account_balance"
        android:layout_marginTop="15dp"
        android:textColor="@color/lloyds_green"
        android:textSize="25dp"
        android:layout_alignLeft="@+id/account_balance"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

    <ListView
        android:id="@+id/transactions_list"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

    </ListView>

    </LinearLayout>
</RelativeLayout>
