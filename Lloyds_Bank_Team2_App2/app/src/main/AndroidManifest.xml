<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.team.two.lloyds_app">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".screens.activities.LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".screens.MainScreen"
            android:label="@string/title_activity_main_screen">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value="com.team.two.lloyds_app.screens.MainScreen"/></activity>

        <activity
            android:name=".screens.Statement"
            android:label="@string/title_activity_statement">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value="com.team.two.lloyds_app.screens.MainScreen"/></activity>

        <activity
            android:name=".screens.Transfer"
            android:label="@string/title_activity_transfer">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value="com.team.two.lloyds_app.screens.MainScreen"/></activity>

        <activity
            android:name=".screens.Payments"
            android:label="@string/title_activity_payments">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value="com.team.two.lloyds_app.screens.MainScreen"/></activity>

        <activity
            android:name=".screens.activities.AddRecipient"
            android:label="@string/title_activity_add_recipment">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value="com.team.two.lloyds_app.screens.MainScreen"/></activity>

        <activity
            android:name=".screens.activities.MainActivity"
            android:label="@string/title_activity_main">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value="com.team.two.lloyds_app.screens.MainScreen"/></activity>
    </application>

</manifest>
